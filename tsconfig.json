{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "noEmit": true,
    "allowJs": true,
    "outDir": "dist",
    "typeRoots": ["./dist/index.d.ts"],
    "types": ["vite/client"]
  },
  "include": ["lib", "playground", "vite.config.*"],
  "exclude": ["playground/public/**/*", "dist/**/*", "node_modules", "vendor"]
}
